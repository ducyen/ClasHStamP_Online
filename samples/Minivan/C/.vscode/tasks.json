{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "*.c", "Model/*.c", "NonOOP/*.c",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-I./Model", "-I./NonOOP", "-I./include", "-I/usr/local/include/SDL2", "-I.",
                "-L/usr/local/lib", "-lSDL2", "-lSDL2_gfx", "-lSDL2_image", "-lSDL2_mixer", "-lSDL2_ttf", "-lm"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}